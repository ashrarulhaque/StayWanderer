<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header text-white">
        <h5 class="modal-title" id="searchModalLabel">Search Hotels</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/listings/search" id="searchForm">
          <div class="card p-3 shadow-sm">
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Search..." name="query">
              <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </div>

            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" id="searchByName" name="filter[location]">
                <label class="form-check-label" for="searchByName">Search by Location</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" id="searchByCountry" name="filter[country]">
                <label class="form-check-label" for="searchByCountry">Search by Country</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" id="searchByPrice" name="filter[price]">
                <label class="form-check-label" for="searchByPrice">Search by Price Range</label>
              </div>
              <div class="row">
                <div class="col">
                  <input type="number" class="form-control" placeholder="Min Price" name="minPrice">
                </div>
                <div class="col">
                  <input type="number" class="form-control" placeholder="Max Price" name="maxPrice">
                </div>
              </div>
            </div>

            <div>
              <label for="sortBy">Sort By price:</label>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="sortby" id="inlineRadio1" value="1" checked>
                <label class="form-check-label" for="inlineRadio1">Low to High</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="sortby" id="inlineRadio2" value="-1">
                <label class="form-check-label" for="inlineRadio2">High to Low</label>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>