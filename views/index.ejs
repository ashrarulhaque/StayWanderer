<% layout('/layouts/boilerplate') -%>
<!-- Hero Carousel Section (Autoplay with Fade) -->
<div
  id="heroCarousel"
  class="carousel slide carousel-fade"
  data-bs-ride="carousel"
  data-bs-interval="2000"
>
  <div class="carousel-inner">
    <!-- Slide 1 -->
    <div class="carousel-item active">
      <img
        src="https://images.unsplash.com/photo-1526786220381-1d21eedf92bf?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        class="d-block w-100"
        id="hero-image"
        alt="Luxury Hotel"
      />
      <div
        class="carousel-caption d-md-block bg-dark bg-opacity-50 rounded p-4"
      >
        <h1 class="text-white">Discover Luxury Hotels</h1>
        <p class="text-light">Book your dream stay with StayWanderer</p>
        <a href="/listings" class="btn btn-secondary">Explore Now</a>
      </div>
    </div>
    <!-- Slide 2 -->
    <div class="carousel-item">
      <img
        src="https://images.unsplash.com/photo-1702395663953-2a93da78f9bd?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        class="d-block w-100"
        id="hero-image"
        alt="Beach Resort"
      />
      <div
        class="carousel-caption d-md-block bg-dark bg-opacity-50 rounded p-4"
      >
        <h1 class="text-white">Beachside Bliss</h1>
        <p class="text-light">Resorts by the sea, just a click away</p>
        <a href="/listings" class="btn btn-secondary">Find Stays</a>
      </div>
    </div>
    <!-- Slide 3 -->
    <div class="carousel-item">
      <img
        src="https://images.unsplash.com/photo-1614703501456-c3b535e3fad0?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        class="d-block w-100"
        id="hero-image"
        alt="Mountain Hotel"
      />
      <div
        class="carousel-caption d-md-block bg-dark bg-opacity-50 rounded p-4"
      >
        <h1 class="text-white">Escape to the Mountains</h1>
        <p class="text-light">Stay cozy and explore nature</p>
        <a href="/listings" class="btn btn-secondary">Browse Lodges</a>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<main class="py-5">
  <div class="container">
    <h2 class="text-center section-title">Top Picks For You</h2>
    <div class="row g-4">
      <% for (listInfo of randomListing) { %>
      <div class="col-md-4">
        <a href="/listings/show/<%= listInfo._id %>">
          <div class="card hotel-card">
            <img
              src="<%= listInfo.image.url %>"
              class="card-img-top"
              alt="Hotel Image"
              style="height: 40vh; background-size: cover"
            />
            <div class="card-body">
              <h5 class="card-title"><%= listInfo.title %></h5>
              <p class="card-text"><%= listInfo.description %></p>
              <p class="text-muted">
                &#8377;<%=listInfo.price.toLocaleString("en-IN")%>
              </p>
              <a
                href="/listings/show/<%= listInfo._id %>"
                class="btn btn-primary" id="index-btn"
                >Book Now
              </a>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</main>
<!-- Why Choose Us Section -->
